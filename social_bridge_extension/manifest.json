{
    "manifest_version": 3,
    "name": "LiveMatch Social Bridge",
    "version": "1.0",
    "description": "ساعد نفسك في نشر المقالات لمجموعتك على فيسبوك بسهولة وأمان.",
    "permissions": [
        "storage",
        "notifications",
        "tabs"
    ],
    "host_permissions": [
        "https://livematch-991.pages.dev/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}